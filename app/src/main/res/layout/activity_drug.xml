<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/photo_placeholder">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke"
            android:focusable="true"
            android:id="@+id/layout_drug_item1"
            android:layout_margin="10dp"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_margin="8dp"
                android:padding="8dp">
                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/drug_icon"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_login"
                        android:padding="8dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvDrugCName"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_login"
                        android:padding="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/theme_primary_dark"
                        android:id="@+id/tvDrugSName"
                        android:textStyle="italic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/account_login"
                        android:padding="8dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/tvDrugC"
                        android:textStyle="italic"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="@string/info"
            android:background="@drawable/stroke1"
            android:layout_margin="8dp"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/type"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/type"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_drug_type"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="8dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/indication"
                    android:padding="8dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/indication"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_drug_indication" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="8dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/side_effects"
                    android:padding="8dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/indication"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_drug_side_effects" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="8dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/warnings"
                    android:padding="8dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/indication"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_drug_warnings" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="8dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/pregnant_allowed"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/pregnant_allowed"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_pregnant_allowed"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="8dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:text="@string/drug_description"
                    android:padding="8dp"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="@string/drug_description"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_drug_description" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/stroke">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/expiry_date"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:layout_weight="0.6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="@string/expiry_date"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:id="@+id/tv_expiry_date"
                android:layout_weight="0.4"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddToMyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:text="@string/add_to_my_list"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableEnd="@drawable/ic_add_circle_outline_black_24dp"
            android:drawableRight="@drawable/ic_add_circle_outline_black_24dp"
            android:drawableTint="@color/white"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnDeleteToMyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:text="@string/delete_to_my_list"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableEnd="@drawable/ic_delete_black_24dp"
            android:drawableRight="@drawable/ic_delete_black_24dp"
            android:drawableTint="@color/white"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>

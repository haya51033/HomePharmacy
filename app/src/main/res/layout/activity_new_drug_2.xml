<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include
        layout="@layout/app_bar_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/side_nav_bar"
                    android:focusable="true"
                    android:id="@+id/layout_drug_item1">

                    <android.support.v7.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:elevation="12dp"
                        android:id="@+id/view2"
                        app:cardCornerRadius="40dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        android:layout_margin="8dp"
                        android:padding="8dp">
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/imageView1"
                            android:src="@drawable/drug_icon"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>

                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/drug_information"
                                android:padding="8dp"
                                android:textSize="30sp"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/arabic_information"
                                android:padding="8dp"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:textStyle="italic"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/drug_c_name"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/drug_c_name"
                            android:id="@+id/et_ar_drug_c_name"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.4"
                            android:inputType="text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/drug_s_name"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/drug_s_name"
                            android:id="@+id/et_ar_drug_s_name"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.4"
                            android:inputType="text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/type"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.6"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/type"
                            android:id="@+id/et_ar_drug_type"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.4"
                            android:inputType="text"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/indication"
                            android:padding="8dp"
                            android:layout_margin="10dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/indication"
                            android:id="@+id/et_ar_drug_indication"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:inputType="text"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/side_effects"
                            android:padding="8dp"
                            android:layout_margin="10dp" />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/side_effects"
                            android:id="@+id/et_ar_drug_side_effects"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:inputType="text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/warnings"
                            android:padding="8dp"
                            android:layout_margin="10dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/warnings"
                            android:id="@+id/et_ar_drug_warnings"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:inputType="text"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_shape"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        android:padding="8dp">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            android:text="@string/drug_description"
                            android:padding="8dp"
                            android:layout_margin="10dp" />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:hint="@string/description"
                            android:id="@+id/et_ar_drug_description"
                            android:background="@drawable/stroke"
                            android:padding="8dp"
                            android:layout_margin="10dp"
                            android:inputType="text" />


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnNewDrug2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:padding="8dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>

